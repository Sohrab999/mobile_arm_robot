<launch>

    <let name="arm_path" 
         value="$(find-pkg-share my_robot_description)/urdf/robotic_arm.xacro"/>

    <let name="arm_rviz"
         value="$(find-pkg-share my_robot_description)/rviz/robo_arm.rviz"/>

     <let name="gz_config_path"
          value="$(find-pkg-share my_robot_bringup)/config/my_robot_bridge.yaml"/>

    <node pkg="robot_state_publisher" exec="robot_state_publisher">
        <param name="robot_description" 
               value="$(command 'xacro $(var arm_path)')"/>
    </node>

    <include file="$(find-pkg-share ros_gz_sim)/launch/gz_sim.launch.py">
          <arg name="gz_args" value="$(find-pkg-share my_robot_bringup)/worlds/test_world.sdf -r"/>
    </include>

    <node pkg="ros_gz_sim" exec="create" args="-topic robot_description"/>

 
    <!-- <node pkg="joint_state_publisher_gui" exec="joint_state_publisher_gui"/> -->



    <node pkg="ros_gz_bridge" exec="parameter_bridge">
        <param name="config_file" value="$(var gz_config_path)"/>
    </node>

    <node pkg="rviz2" exec="rviz2" output="screen" args="-d $(var arm_rviz)" />


</launch>